# Database - NeonDB PostgreSQL
# Get these from your Neon dashboard: https://console.neon.tech
DATABASE_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require"
DIRECT_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require"

# JWT Authentication
JWT_SECRET="your-secure-jwt-secret-min-32-characters-long"
JWT_EXPIRES_IN="7d"

# Application
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"
NODE_ENV="production"

# Optional: Blockchain (set to 'true' to enable)
ENABLE_BLOCKCHAIN="false"
BLOCKCHAIN_NETWORK="polygon"
BLOCKCHAIN_CONTRACT_ADDRESS=""

# Optional: Insurance Module
ENABLE_INSURANCE_MODULE="false"
LLOYDS_API_URL=""
LLOYDS_API_KEY=""

# Optional: Stripe Payments
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
